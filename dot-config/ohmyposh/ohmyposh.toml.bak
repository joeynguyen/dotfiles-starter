#:schema https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json

# inspired by https://github.com/dreamsofautonomy/zen-omp/blob/main/zen.toml
version = 2
final_space = true
console_title_template = '{{ .Shell }} in {{ .Folder }}'

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'path'
    style = 'plain'
    background = 'transparent'
    foreground = 'blue'
    template = '<p:blue>{{ $segment := .Segments.Git }}{{ if $segment.Dir }}<b>{{ $segment.RepoName}}</b>{{if ne $segment.RepoName .Path}}{{ trimPrefix $segment.Dir .PWD }}{{ end }}{{ else }}<b>{{ path .Path .Location }}</b>{{ end }}</> '

    [blocks.segments.properties]
      style = 'folder'

  [[blocks.segments]]
    type = 'git'
    style = 'plain'
    foreground = 'p:grey'
    background = 'transparent'
    template = '{{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }}<cyan>{{ if gt .Behind 0 }}⇣{{ end }}{{ if gt .Ahead 0 }}⇡{{ end }}</>'

    [blocks.segments.properties]
      branch_icon = ' '
      commit_icon = '@'
      fetch_status = true

  [[blocks.segments]]
    type = "node"
    style = "plain"
    powerline_symbol = ""
    foreground = "#6CA35E"
    background = 'transparent'
    template = "  {{ .Full }} "

  [[blocks.segments]]
    type = "python"
    style = "plain"
    powerline_symbol = ""
    foreground = "#100e23"
    background = "#906cff"
    template = "  {{ .Full }} "

  [[blocks.segments]]
    type = "kotlin"
    style = "plain"
    powerline_symbol = ""
    foreground = "#906cff"
    background = 'transparent'
    template = " 󱈙 {{ .Full }} "

  [[blocks.segments]]
    type = "go"
    style = "plain"
    powerline_symbol = ""
    foreground = "#7FD5EA"
    background = 'transparent'
    template = "  {{ .Full }} "

  [[blocks]]
    type = 'prompt'
    alignment = 'right'

    [[blocks.segments]]
      type = "kubectl"
      style = "powerline"
      powerline_symbol = ""
      foreground = '#ebcc34'
      background = 'transparent'
      template = " ⎈ {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} "

      [properties.context_aliases]
      "arn:aws:eks:eu-west-1:1234567890:cluster/posh" = "posh"
      "kind-kind-cluster" = "kind"

[[blocks]]
  type = 'rprompt'
  overflow = 'hidden'

  [[blocks.segments]]
    type = 'executiontime'
    style = 'plain'
    foreground = 'yellow'
    background = 'transparent'
    template = '{{ .FormattedMs }}'

    [blocks.segments.properties]
      threshold = 5000

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    foreground_templates = [
      "{{if gt .Code 0}}red{{end}}",
      "{{if eq .Code 0}}magenta{{end}}",
    ]
    background = 'transparent'
    template = '❯'

[transient_prompt]
  foreground_templates = [
    "{{if gt .Code 0}}red{{end}}",
    "{{if eq .Code 0}}#5FFF3F{{end}}",
  ]
  background = 'transparent'
  template = '❯ '

[secondary_prompt]
  foreground = 'magenta'
  background = 'transparent'
  template = '❯❯ '

[[tooltips]]
type = "kubectl"
tips = ["k","kubectl","helm","kubens","kubeseal","kubectx","oc","istioctl","kogito","kx","kns","k9s","telepresence","flux"]
style = "plain"
foreground = "yellow"
background = "transparent"
template = " ⎈ {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} "
